          "method": "POST",
          "host": [
            "product-service:60060"
          ],
          "group": "product",
          "extra_config": {
            "github.com/devopsfaith/krakend/transport/http/client/executor": {
              "name": "grpc-gateway",
              "endpoints": [
                "product-service:60060",
                "customer-service:60061",
                "payment-service:60062",
                "order-service:60063"
